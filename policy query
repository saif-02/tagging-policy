Resources
| where type == "microsoft.policyinsights/compliances"
| extend complianceStatus = properties.complianceState
| where complianceStatus == "NonCompliant"
| where properties.policyAssignmentId == "YourPolicyAssignmentId"
| project resourceId = id, complianceStatus, policyAssignmentId = properties.policyAssignmentId, policyAssignmentName = properties.policyAssignmentName
